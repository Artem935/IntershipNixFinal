


@foreach (var item in Model.Cars)
{
    <div class="Profile">
        <div class="col-md-9">
            <div class="row" >
                <div class="col-md-3">
                    <a  ><img class="CarFoto" src="~/img/Product/LogoNight.png"alt=""/> </a>   
                </div>
                <div class="col-md-7" >
                        <div class="row">
                            <p class="Title"><button class="ProdutBrandBnt"  type="submit" name="carID" value="@item.Id">@item.Brand @item.Model</button>  </p>

                        </div>
                    <div class='ProductProperty'>
                        <div class="row">
                            

                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-2" >
                                        <img class="IcoFoto" src="~/img/Product/Distance.png" alt="wwfwf"/>
                                    </div>
                                    <div class="col-md-8">
                                            <p>@item.CarMileage km</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2" >
                                        <img class="IcoFoto" src="~/img/Product/Fuel.png" alt="wwfwf"/>
                                    </div>
                                    <div class="col-md-8">
                                        <p>@item.FuelType</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-2" >
                                            <img class="IcoFoto" src="~/img/Product/Transmission.png" alt="wwfwf"/>
                                    </div>
                                    <div class="col-md-8">
                                        <p>@item.GearboxType</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2" >
                                            <img class="IcoFoto" src="~/img/Product/V.png" alt="wwfwf"/>
                                    </div>
                                    <div class="col-md-8">
                                            <p>@item.EngineCapacity</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                            <p class="LabelProperty" style="font-size:18px;position:fixed; padding-bottom:0.5em; ">Year of issue: @item.YearOfManufacture</p>
                    </div>
                </div> 
                <div class="col-md-2">
                        <p class= "Price"> @Math.Round(item.Price,0) $</p>
                    <br/>
                    <img class="LikeBtn" src="~/img/Product/like.png"></img>
                </div>    
            </div>
        </div>
    </div>
    
}




